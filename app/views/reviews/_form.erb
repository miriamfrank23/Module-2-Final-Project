<div class="new_review"><%= form_for @review do |f| %>

  <%= f.label :rating %><br>
  <%= f.select(:rating, options_for_select(@ratings), {}, {:class => "dropdown" })%><br>

  <%= f.label :Description %><br>
  <%= f.text_area :description, class: "text_box"%><br>

  <%= f.submit "Submit Post", class: "btn" %>

<% end %>
