<!DOCTYPE html>
<html>
  <head>
    <title>StayHero</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Lobster" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans+Condensed:300" rel="stylesheet">
  </head>
  <body>
      <div id="logo"> <%= link_to "StayHero", listings_path %> <%= image_tag("home2.png") %></div>

      <div id="navBar">

        <% if current_user %>
        <%= link_to "All listings", listings_path %> <span class="bar"> |</span>
            <%= link_to "View profile", current_user %> <span class="bar"> |</span>
            <a style="text-decoration:none" href=" https://www.airbnb.com/">Recommended spots </a> <span class="bar"> |</span>
            <%= link_to "Last Minute Deals", listings_deals_path %> <span class="bar"> |</span>
            <%= link_to "Logout", logout_path, method: :delete %>
          <% else %>
            <%= link_to "All listings", listings_path %> <span class="bar"> |</span>
            <%= link_to "Login", login_path %>
          <% end %>

      </div>

    <div id="body">
      <%= yield %>
    </div>
  </body>
  <div class="grass"> <%= image_tag("grass.jpg") %></div>
</html>
