<% if flash[:error] %>
  <% flash[:error].each do |error| %>
  <%= error %><br><br>
  <% end %>
<% end %>

<%= form_for @listing do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :price %>
  <%= f.text_field :price %>

  <%= f.label :state %>
  <%= select_tag "state", options_for_select(@states) %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :address %>
  <%= f.text_field :address %>

  <label>Upload a photo of your listing:</label>
   <%= f.file_field :image %><br><br>

  <%= f.submit %>

<% end %>
